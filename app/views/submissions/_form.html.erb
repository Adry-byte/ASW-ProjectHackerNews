<div style="padding: 5px;">
  <%= form_for(@submission) do |f| %>
      <% if @submission.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

            <ul>
              <% @submission.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <div class="label-container">
          <%= f.label :title %>
        </div>
        <%= f.text_field :title, size: 60 %>
      </div>
      <div class="field">
        <div class="label-container">

          <%= f.label :url %>
        </div>

        <%= f.text_field :url,  size: 60 %>

      </div>
      <p class="note"><b>or</b></p>
      <div class="field">
        <div class="label-container">

          <%= f.label :content %>
        </div>

        <%= f.text_area :content, cols: "60", rows: "5" %>
      </div>
      <div class="actions button-container">
        <%= f.submit %>
      </div>

      <p class="note">Leave url blank to submit a question for discussion. If there is no url, the text (if any) will appear at the top of the thread.
      </p>
  <% end %>
</div>